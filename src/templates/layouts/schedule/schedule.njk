          location: 'Scruffy City Hall',
          time: 'Right after Presentation!',
          meridiem: ''
        }
      ]
    }
  ]%}
<section id="{{ base }}" class="{{ base }}">
    <div class="container">
        <header class="{{ base }}__header screen-reader-text">
            <h3 class="{{ base }}__title">Schedule</h3>
        </header>
        <ul class="days">
            {% for day in days %}
                {# <pre>{{ day | dump(2) }}</pre> #}
                <li class="days__item">
                    <h4 class="days__title">{{ day.title }}: <span data-count="days__date">{{ day.date | safe }}</span></h4>
                    <ul class="events">
                        {% for event in day.events %}
                            <li class="events__item">
                                <p class="events__title">{{ event.title }}</p>
                                <p class="events__location">{{ event.location | safe }}</p>
                                <p class="events__time">{{ event.time }}<span>{{ event.meridiem }}</span></p>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>