        },
        {
          title: 'Slide Show Karaoke',
          location: 'Pyxl',
          time: '5:00-6:00',
          meridiem: 'pm'
        },
        {
          title: 'Dinner',
          location: 'Pyxl',
          time: '5:00-6:00',
          meridiem: 'pm'
        }
      ]
    },
    {
      title: 'Sunday',
      date: '3/03',
      events: [
        {
          title: 'Breakfast',
